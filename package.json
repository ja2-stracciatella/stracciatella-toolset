{
  "description": "A foundation for scalable desktop apps",
  "license": "MIT",
  "main": "./.erb/dll/main.bundle.dev.js",
  "scripts": {
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "npm run rebuild:rust && cross-env NODE_ENV=production webpack --config ./.erb/configs/webpack.config.main.prod.mts",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./.erb/configs/webpack.config.renderer.prod.mts",
    "postinstall": "node .erb/scripts/check-native-dep.mts && electron-builder install-app-deps && cross-env NODE_ENV=development webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.mts",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "tsc": "cross-env NODE_ENV=development tsc",
    "tsc:check": "cross-env NODE_ENV=development tsc --noEmit && cross-env NODE_ENV=development tsc --project ./.erb",
    "package": "node ./.erb/scripts/clean.mts dist && npm run build && electron-builder build --publish never",
    "rebuild": "npm run rebuild:rust && electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "rebuild:rust": "node ./.erb/scripts/ensure-rust-dep.mts",
    "prestart": "npm run rebuild:rust && cross-env NODE_ENV=development webpack --config ./.erb/configs/webpack.config.main.dev.mts",
    "start": "node ./.erb/scripts/check-port-in-use.mts && npm run prestart && npm run start:renderer",
    "start:main": "concurrently -k \"cross-env NODE_ENV=development webpack --watch --config ./.erb/configs/webpack.config.main.dev.mts\" \"electronmon .\"",
    "start:preload": "cross-env NODE_ENV=development webpack --config ./.erb/configs/webpack.config.preload.dev.mts",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config ./.erb/configs/webpack.config.renderer.dev.mts",
    "test": "cross-env NODE_ENV=development vitest --run"
  },
  "browserslist": [],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@rjsf/antd": "^5.24.13",
    "@rjsf/core": "^5.24.13",
    "@rjsf/utils": "^5.24.13",
    "@rjsf/validator-ajv8": "^5.24.13",
    "antd": "^5.25.2",
    "electron-debug": "^4.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1",
    "zod": "^4.1.10"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@electron/rebuild": "^4.0.1",
    "@eslint/compat": "^1.3.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@svgr/webpack": "^8.1.0",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cargo-cp-artifact": "^0.1.9",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "detect-port": "^2.1.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electronmon": "^2.0.3",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jsdom": "^27.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "node-loader": "^2.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.54.4",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.4",
    "type-fest": "^5.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "build": {
    "productName": "JA2 Stracciatella Toolset",
    "appId": "io.github.ja2-stracciatella.stracciatella-toolset",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.mts",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Games"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "ja2-stracciatella",
      "repo": "stracciatella-toolset"
    }
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**",
      ".erb/dll/**"
    ],
    "logLevel": "quiet"
  }
}
